#!/bin/bash

if [ $# -eq 0 ] ; then
        echo "Please supply one or more filenames to process" >&2
        exit 1
fi

ASTYLE=/home/zglue/bin/astyle

declare -A Styles

Styles["nuttx"]=/home/zglue/bin/astyle-nuttx

CMD_GDB=( "gdb" "--se=" "/home/zglue/bin/symbols.astyled")
CMD=( "$ASTYLE" "--options=${Styles[nuttx]}" "$@" )

echo "${CMD_GDB[@]} ${CMD[@]}"
"${CMD_GDB[@]}" "${CMD[@]}"


#!/bin/bash

ColorList=( "RESET" "RED" "REDBLK" "REDYLW" "REDBLU" "GREEN" "GRNBLK" "GRNGRN" "YELLOW"\
            "YLWBLK" "YLWRED" "YLWGRN" "YLWBLU" "YLWLTBLU" "BLUE" "WHTBLK" )
do_for()
{
        local Cmd=
        local List=
        local var=

        Cmd="$1" ; shift
        List=( "$@" )

        for var in "${List[@]}" ; do
#               echo ":: var ($var)"
                eval $Cmd
        done
}

#
# Set the color variables or unset them.  Arg1 = ""
# or 1 sets them and arg1 = 0 unsets them.
#
set_colors()
{
        local OnOff=

        OnOff="$1"

        if [ -n "$OnOff" ] && [ "$OnOff" = "0" ]  ; then
                do_for unset "${ColorList[@]}"
                COLOR_OPT="off "
                OUTCOME="your default terminal colors."
                return
        fi
        COLOR_OPT="on "
        OUTCOME="colorized."
        RESET='\033[0;39;49m'
        RED='\033[1;31m'
# shellcheck disable=2034
        REDBLK='\033[1;31;40m'
# shellcheck disable=2034
        REDYLW='\033[1;31;43m'
        REDBLU='\033[1;31;46m'
        GREEN='\033[1;32m'
        GRNBLK='\033[1;32;40m'
        GRNGRN='\033[1;32;42m'
        YELLOW='\033[1;33m'
        YLWBLK='\033[1;33;40m'
        YLWRED='\033[1;33;41m'
        YLWGRN='\033[1;33;42m'
        YLWBLU='\033[1;33;44m'
        YLWLTBLU='\033[1;33;46m'
        WHTBLK='\033[1;37;40m'
        BLUE='\033[1;34m'
}

color_settings_test()
{
        [ "$DEBUG" != "1" ] && return

        do_for 'echo -e ":: $var   (${!var})=ABcd=${RESET}"' \
               "${ColorList[@]}"

        echo -e "\n${GRNGRN}This is a test.${RESET}"
        echo -e "${GRNGRN}Since text coloring is ${COLOR_OPT}this${RESET}"
        echo -e "${GRNGRN}message should be $OUTCOME${RESET}"
}

COLOR_OPT=
OUTCOME=
set_colors "$1"

color_settings_test


	kernel-common
	fuse
	fusefat
	fuseiso9660
	fswatch
	vim-fugitive
	neovim-qt
        poppler-utils
        vim-nox
        vim-editorconfig
	vim-addon-manager
        vim-scripts
	vim-python-jedi
	exuberant-ctags
	cscope
	minicom
        sympathy
	usbutils
	smbclient
	samba
	mdns-scan
"

dbg()
{
        [ "$DEBUG" = "1" ] || return 1
        return 0
}

func()
{
        dbg || return
        err_echo "===> ${FUNCNAME[1]} ($@)"
}

install_pkgs()
{
        func "$@"

        for pkg in $@ ; do
                sudo apt-get -y install $pkg
        done

}


install_pkgs $UBU_PKGS


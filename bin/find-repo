quick_find_repo()
{
        for dir in $(ls -d *)  ; do
                [ ! -d "$dir" ] && continue
                pushd >/dev/null "$dir"
                LIST=( $(git remote -v | grep fetch | awk -F'/' '{print $NF}' | sed -e 's/\.git.*//') )
                echo -n "  "
                [ ${#dir} -lt 10 ] && echo -n "."
                echo -n -e "${#dir}\\t"
                echo -n -e "== \\t $dir\\t"
                [ "${#dir}" -lt  7 ] && echo -n -e "\\t"
                [ "${#dir}" -lt 16 ] && echo -n -e "\\t"
                echo "${LIST[0]}"
                popd >/dev/null
        done
}

[ "$#" -eq 0 ] && find_repo_only
[ "$#" -eq 1 ] && find_repo_and_echo
[ "$#" -eq 2 ] && quick_find_repo


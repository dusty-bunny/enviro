#!/bin/bash

declare -A gitconf

CONFIG_KEYS="user.name user.email"
gitconf["user.name"]="Bill Rees"
gitconf["user.email"]="bill@zglue.com <bill rees>"

#
# Set some git config variables needed for git to function as intended.
#
config_git_user()
{
        for key in $CONFIG_KEYS ; do
                if ! git config --global $key >/dev/null ; then
                        echo "Configure git key: $key" >&2
                        git config --global $key "${gitconf["$key"]}"
                fi
        done
}

config_git_user

